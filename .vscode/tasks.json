{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-latency",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/sdk/workspace"
            },
            "command": "make app=test-latency",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "c",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}/sdk/workspace/test-latency"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                },
                {
                    "owner": "ld",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}/sdk/workspace/test-latency"
                    ],
                    "pattern": {
                        "regexp": "^(.*):\\(.+\\):\\s+(.*)$",
                        "file": 1,
                        "message": 2
                    }
                }
            ]
        }
    ]
}